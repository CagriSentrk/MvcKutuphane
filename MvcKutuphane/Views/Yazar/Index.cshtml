@using MvcKutuphane.Models.Entity;
@model List<TBLYAZAR>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/Layout.cshtml";
}

<h2>Yazarlar</h2>
<table class="table table-bordered">
    <tr>
        @* sütun başlıklarını yazmak için yazılan komut.*@
        <th>ID</th>
        <th>AD</th>
        <th>SOYAD</th>
        <th>DETAY</th>
        <th>SİL</th>
        <th>GÜNCELLE</th>
        @*<th> ve <td> arasında ki fark <th> kalın puntoyla <td> ince puntoyla yazar.*@
    </tr>
    @foreach (var yzr in Model) //veritabanında ki değerler kadar <tr> nin içindekileri tabloya yazması için bir foreach yazdım.
    {
        <tr>
            <td>@yzr.ID</td>   @* yzr nesnesi ile veritabanında ki ıd ve adları tabloya aktardım.*@
            <td>@yzr.AD</td>
            <td>@yzr.SOYAD</td>
            <td>@yzr.DETAY</td>
            <td>@Html.ActionLink("SİL", "YazarSil", new {id=yzr.ID },new {@class="btn btn-danger",onclick="return confirm('Silmek istiyor musunuz?')" })</td> 
            @*Burada sil tuşuna bastığımızda emin misin diye soru soru sormasını sağladığım bir satır yazdım.*@
            <td><a href="/Yazar/YazarGetir/@yzr.ID"class="btn btn-success">GÜNCELLE</a></td>

        </tr>

    }

</table>
<a href="/Yazar/YazarEkle" class="btn btn-success">Yeni yazar ekle </a> @* yeni yazar eklemek için buton oluşturdum.Butona tıklandığında /Yazar/YazarEkle
    indexine yönlendiriyor.*@

