@using MvcKutuphane.Models.Entity;
@model List<TBLPERSONEL>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/Layout.cshtml";
}

<h2>KATEGORİLER</h2>
<table class="table table-bordered">
    <tr>
        @* sütun başlıklarını yazmak için yazılan komut.*@
        <th>Personel ID</th>
        <th>Personel Adı</th>
        <th>SİL</th>
        <th>GÜNCELLE</th>
    </tr>
    @foreach (var prs in Model) //veritabanında ki değerler kadar <tr> nin içindekileri tabloya yazması için bir foreach yazdım.
    {
        <tr>
            <td>@prs.ID</td>   @* ktg nesnesi ile veritabanında ki ıd ve adları tabloya aktardım.*@
            <td>@prs.PERSONEL</td>
            <td> <a href="/Personel/PersonelSil/@prs.ID" class="btn btn-default">SİL</a></td>   @* kategorileri silmek için bir buton oluşturdum.*@
            <td> <a href="/Personel/PersonelGetir/@prs.ID" class="btn btn-primary">GÜNCELLE</a></td>  @* kategorileri güncellemek için bir buton oluşturdum.*@
        </tr>

    }

</table>
<a href="/Personel/PersonelEkle" class="btn btn-success">Yeni personel ekle </a> @* yeni kategori eklemek için buton oluşturdum.Butona tıklandığında /Kategori/KategoriEkle
    indexine yönlendiriyor.*@

