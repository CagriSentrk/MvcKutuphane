@using MvcKutuphane.Models.Entity;
@model List<TBLKATEGORI>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/Layout.cshtml";
}
<h2>KATEGORİLER</h2>
<table class="table table-bordered">
    <tr>
        @* sütun başlıklarını yazmak için yazılan komut.*@
        <th>Kategori ID</th>
        <th>KATEGORİ ADI</th>
        <th>SİL</th>
        <th>GÜNCELLE</th>
        @*<th> ve <td> arasında ki fark <th> kalın puntoyla <td> ince puntoyla yazar.*@
    </tr>
    @foreach (var ktg in Model) //veritabanında ki değerler kadar <tr> nin içindekileri tabloya yazması için bir foreach yazdım.
    {
        <tr>
            <td>@ktg.ID</td>   @* ktg nesnesi ile veritabanında ki ıd ve adları tabloya aktardım.*@
            <td>@ktg.AD</td>
            <td> <a href="/Kategori/KategoriSil/@ktg.ID" class="btn btn-default">SİL</a></td>   @* kategorileri silmek için bir buton oluşturdum.*@
            <td> <a href="/Kategori/KategoriGetir/@ktg.ID" class="btn btn-primary">GÜNCELLE</a></td>  @* kategorileri güncellemek için bir buton oluşturdum.*@
        </tr>

    }

</table>
<a href="/Kategori/KategoriEkle" class="btn btn-success">Yeni kategori ekle </a> @* yeni kategori eklemek için buton oluşturdum.Butona tıklandığında /Kategori/KategoriEkle
                                                                                     indexine yönlendiriyor.*@
